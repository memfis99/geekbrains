############crate job4
#!/bin/bash
w=`du -hd1 /home|tr -s '/' ' '|cut -d ' ' -f 1,3`
d=`date`
echo -e ""$d" \n$w" >> /home/memfis/chdu4


############### add task to cron
sudo i
vi /etc/crontab
############### add row
0 0  * *  *   memfis cd /home/memfis/&&./job4
############### check
memfis@ubuntu:~$ cat chdu4|tail -f
75M	 memfis
16K	 utest
28K	 udev2
75M	
Wed 02 Dec 2020 01:29:01 PM PST 
24K	 udev1
75M	 memfis
16K	 utest
28K	 udev2
75M	
